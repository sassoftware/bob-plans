includeConfigFile ../config/rbuilder.conf

macros version 2.1.19
macros policy_version 1.0.28
macros top_group group-os

hg conary http://scc.eng.rpath.com/products/rbuilder/%(rbuilder_forest)s/conary
hg conary-test http://scc.eng.rpath.com/products/rbuilder/%(rbuilder_forest)s/conary-test
hg conary-policy http://scc.eng.rpath.com/products/rbuilder/%(rbuilder_forest)s/conary-policy

target conary
target conary-policy
target conary-test

[target:conary]
sourceLabel testbits.rb.rpath.com@rpath:conary-common
version %(version)s.%(hg)s
hg conary
flavor_set plain

[target:conary-policy]
sourceLabel testbits.rb.rpath.com@rpath:conary-common
version %(policy_version)s.%(hg)s
hg conary-policy
flavor_set plain

[target:conary-test]
sourceLabel testbits.rb.rpath.com@rpath:conary-common
version %(version)s.%(hg)s
hg conary-test
flavor %rPL 2:x86%      conary-test.rpm, !conary-test.coverage
flavor %rPL 2:x86_64%   conary-test.rpm, !conary-test.coverage

